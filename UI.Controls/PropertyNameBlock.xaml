<UserControl x:Class="LayerCake.UI.Controls.PropertyNameBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="174">
    <DockPanel>
        <TextBlock Text="{Binding Path=PropertyName, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" 
                   Margin="5,5,0,5"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"/>
        <TextBlock Text=":"
                   Margin="0,5,5,5"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"/>
    </DockPanel>
</UserControl>
